<!--index.wxml-->
<view class="container">
  <text>欢迎来到小宝商城</text>
  <input type="number" class="phone_number" bindblur="getphone" placeholder="请输入电话号码"></input> 
  <view class="code">
    <input type="number" class="code_number" bindblur="getcode" placeholder="请输入验证码"></input>
    <button  class="btn_code">点击获取验证码</button>
  </view>

  <view>
    <button class="login" bindtap="login">商城登录</button>
  </view>
</view>
