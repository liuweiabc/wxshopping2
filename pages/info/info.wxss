/* pages/info/info.wxss */

swiper swiper-item video{
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

swiper swiper-item image{
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.info{
    display:flex;
    flex-direction: row;
    justify-content: space-around;
    margin: 16rpx 0;
    background-color: cornflowerblue;
    color: white;
}

.details{
    display:flex;
    justify-content: center;
    margin: 10rpx 0;
}

.picture{
    display:flex;
    flex-direction: column;
    padding: 20rpx,0;
}
.picture image{
    margin:10rpx 0
}

.btn {
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    color: white;
    position:fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

